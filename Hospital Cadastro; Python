Patient = input('what is your name? ')
Age = input('how old are you? ')
Symptons = input('What are yours Symptons? ')
Treatment = input('how much will be the remedy? ')
cost_1 = 0.415 * int(Treatment)
cost_2 = cost_1 + int(Treatment)
total_cost = str(cost_2)
print('Patient called ' + Patient)
print('is ' + Age + ' years old')
print('he/she symptons are ' + Symptons)
print('the total cost of his treatment will be ' +str(total_cost))
